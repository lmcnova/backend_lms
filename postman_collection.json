            "body": {"mode": "raw", "raw": "{\n  \"title\": \"Welcome\",\n  \"description\": \"Welcome video\",\n  \"video_url\": \"https://example.com/welcome.mp4\",\n  \"duration_seconds\": 180\n}"},
            "url": {"raw": "{{base_url}}/videos/topic/{{topic_uuid}}", "host": ["{{base_url}}"], "path": ["videos", "topic", "{{topic_uuid}}"]}
          }
        },
        {"name": "List Videos", "request": {"method": "GET", "header": [], "url": {"raw": "{{base_url}}/videos/topic/{{topic_uuid}}", "host": ["{{base_url}}"], "path": ["videos", "topic", "{{topic_uuid}}"]}}}
      ]

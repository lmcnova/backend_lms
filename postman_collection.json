        {
          "name": "Admin Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Device-Name",
                "value": "Admin Laptop",
                "description": "Optional device label"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email_id\": \"admin@test.com\",\n  \"password\": \"admin123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },

{
  "info": {
    "name": "Online Course Management API",
    "description": "Complete API collection for Admin and Student management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Teachers",
      "item": [
        {
          "name": "Create Teacher (admin)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{access_token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Dr. Ada\",\n  \"email_id\": \"ada@demo.local\",\n  \"password\": \"teacher123\"\n}"
            },
            "url": {"raw": "{{base_url}}/teachers/", "host": ["{{base_url}}"], "path": ["teachers", ""]}
          }
        },
        {"name": "List Teachers", "request": {"method": "GET", "header": [], "url": {"raw": "{{base_url}}/teachers/", "host": ["{{base_url}}"], "path": ["teachers", ""]}}}
      ]
    },
    {
      "name": "Courses",
      "item": [
        {
          "name": "Create Course (admin/teacher)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{access_token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Python Programming\",\n  \"category\": \"Python\",\n  \"level\": \"beginner\",\n  \"description\": \"Intro to Python\",\n  \"tags\": [\"python\", \"basics\"],\n  \"thumbnail_url\": null,\n  \"intro_video_url\": null,\n  \"instructor_uuid\": \"{{teacher_uuid}}\",\n  \"co_instructor_uuids\": []\n}"
            },
            "url": {"raw": "{{base_url}}/courses/", "host": ["{{base_url}}"], "path": ["courses", ""]}
          }
        },
        {"name": "List Courses", "request": {"method": "GET", "header": [], "url": {"raw": "{{base_url}}/courses/", "host": ["{{base_url}}"], "path": ["courses", ""]}}},
        {"name": "Get Course Outline", "request": {"method": "GET", "header": [], "url": {"raw": "{{base_url}}/courses/{{course_key}}/outline", "host": ["{{base_url}}"], "path": ["courses", "{{course_key}}", "outline"]}}}
      ]
    },
    {
      "name": "Topics",
      "item": [
        {
          "name": "Create Topic (admin/teacher)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{access_token}}"}
            ],
            "body": {"mode": "raw", "raw": "{\n  \"title\": \"Introduction\",\n  \"description\": \"Course intro\"\n}"},
            "url": {"raw": "{{base_url}}/topics/course/{{course_uuid}}", "host": ["{{base_url}}"], "path": ["topics", "course", "{{course_uuid}}"]}
          }
        },
        {"name": "List Topics", "request": {"method": "GET", "header": [], "url": {"raw": "{{base_url}}/topics/course/{{course_uuid}}", "host": ["{{base_url}}"], "path": ["topics", "course", "{{course_uuid}}"]}}}
      ]
    },
    {
